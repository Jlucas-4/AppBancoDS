@model IEnumerable<AppBancoLM.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Cliente" asp-action="CadastrarCliente">Cadastrar novo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomeCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomeCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                    <button type="button" class="btn btn-warning">
                        @Html.ActionLink("Editar", "AtualizarCliente", new { /* id=item.PrimaryKey */ })
                    </button>|
                    <button type="button" class="btn btn-secondary">
                        @Html.ActionLink("Detalhes", "DetalhesCliente", new { /* id=item.PrimaryKey */ })
                    </button>|
                    <button type="button" class="btn btn-danger">
                        @Html.ActionLink("Deletar", "ExcluirCliente", new { /* id=item.PrimaryKey */ })
                    </button>
            </td>
        </tr>
}
    </tbody>
</table>
